{% extends "@bootstrap_barrio/layout/page.html.twig" %}

{% block content %}
  <div class="container">
    <!-- Sidhuvud -->
    <header class="site-header my-4">
      <div class="row">
        <div class="col text-center">
          <h1>Tävling & Träning</h1>
          <p class="lead">Resurser för dig som tränar eller tävlar på Stora Höga Ridklubb.</p>


{% block content %}
  <div class="container">
    <!-- Header -->
    <header class="site-header">
      <div class="row">
        <div class="col-md-12 text-center">
          <h1>Mitt Drupal-projekt</h1>
          <img src="{{ directory }}/images/logo.png" alt="Site Logo" class="site-logo">
        </div>
      </div>
    </header>
    <!-- Navigationsmeny för relaterade noder -->
    <nav class="nav justify-content-center mb-4">
      <a class="nav-link active" href="/node/1">Tävling</a>
      <a class="nav-link" href="/node/2">Privathästar</a>
      <a class="nav-link" href="/node/3">Träning</a>
    </nav>

    <!-- Inledande beskrivning -->
    <section class="mb-5">
      <div class="row">
        <div class="col-md-8">
          <h2>Om den här sidan</h2>
          <p>Denna sida är en samlingsplats för allt som rör träning och tävling, här hittar du resurser och uppdateringar.</p>
        </div>
        <div class="col-md-4">
          <img src="{{ directory }}/images/traning.jpg" class="img-fluid rounded" alt="Träning">
        </div>
      </div>
    </section>

    <!-- Accordion för innehåll -->
    <div class="accordion mb-5" id="trainingAccordion">
      <div class="accordion-item">
        <h2 class="accordion-header" id="heading1">
          <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse1" aria-expanded="true" aria-controls="collapse1">
            Träningsschema
          </button>
        </h2>
        <div id="collapse1" class="accordion-collapse collapse show" aria-labelledby="heading1" data-bs-parent="#trainingAccordion">
          <div class="accordion-body">
            {{ drupal_entity('node', 1) }}
          </div>
        </div>
      </div>

      <div class="accordion-item">
        <h2 class="accordion-header" id="heading2">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse2" aria-expanded="false" aria-controls="collapse2">
            Kalender
          </button>
        </h2>
        <div id="collapse2" class="accordion-collapse collapse" aria-labelledby="heading2" data-bs-parent="#trainingAccordion">
          <div class="accordion-body">
            {{ drupal_entity('node', 2) }}
          </div>
        </div>
      </div>

      <div class="accordion-item">
        <h2 class="accordion-header" id="heading3">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse3" aria-expanded="false" aria-controls="collapse3">
            Button
          </button>
        </h2>
        <div id="collapse3" class="accordion-collapse collapse" aria-labelledby="heading3" data-bs-parent="#trainingAccordion">
          <div class="accordion-body">
            {{ drupal_entity('node', 3) }}
=======
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        {{ drupal_menu('main') }}
      </div>
    </nav>

    <!-- Carousel med specifika noder -->
    <div id="carouselExample" class="carousel slide my-4" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <div class="d-block w-100 bg-light text-dark text-center p-5">
            {{ drupal_entity('node', 1) }}
          </div>
        </div>
        <div class="carousel-item">
          <div class="d-block w-100 bg-light text-dark text-center p-5">
            {{ drupal_entity('node', 2) }}
          </div>
        </div>
        <div class="carousel-item">
          <div class="d-block w-100 bg-light text-dark text-center p-5">
            {{ drupal_entity('node', 3) }}
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>

    <!-- Accordion med specifika noder -->
    <div class="accordion my-5" id="articleAccordion">
      <div class="accordion-item">
        <h2 class="accordion-header" id="heading4">
          <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse4" aria-expanded="true" aria-controls="collapse4">
            Nod 4
          </button>
        </h2>
        <div id="collapse4" class="accordion-collapse collapse show" aria-labelledby="heading4" data-bs-parent="#articleAccordion">
          <div class="accordion-body">
            {{ drupal_entity('node', 4) }}
          </div>
        </div>
      </div>
      <div class="accordion-item">
        <h2 class="accordion-header" id="heading5">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse5" aria-expanded="false" aria-controls="collapse5">
            Nod 5
          </button>
        </h2>
        <div id="collapse5" class="accordion-collapse collapse" aria-labelledby="heading5" data-bs-parent="#articleAccordion">
          <div class="accordion-body">
            {{ drupal_entity('node', 5) }}
          </div>
        </div>
      </div>
      <div class="accordion-item">
        <h2 class="accordion-header" id="heading6">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse6" aria-expanded="false" aria-controls="collapse6">
            Nod 6
          </button>
        </h2>
        <div id="collapse6" class="accordion-collapse collapse" aria-labelledby="heading6" data-bs-parent="#articleAccordion">
          <div class="accordion-body">
            {{ drupal_entity('node', 6) }}
          </div>
        </div>
      </div>
    </div>
    <!-- Artikelutdrag -->
    <section class="mb-5">
      <h2>Utvalda Artiklar</h2>
      <div class="row">
        <div class="col-md-4">
          <article class="mb-4">
            {{ drupal_entity('node', 5) }}
          </article>
        </div>
        <div class="col-md-4">
          <article class="mb-4">
            {{ drupal_entity('node', 6) }}
          </article>
        </div>
        <div class="col-md-4">
          <article class="mb-4">
            {{ drupal_entity('node', 7) }}
          </article>
        </div>
      </div>
    </section>

    <!-- Aside -->
    <aside class="row mb-5">
      <div class="col-md-8">
        <h3>Aside</h3>
        {{ drupal_entity('node', 8) }}
      </div>
      <div class="col-md-4">
        <h3>Innehåll</h3>
        {{ drupal_entity('node', 9) }}
      </div>
    </aside>
    <!-- Footer -->
    <footer class="site-footer mt-5">
      <div class="row">
        <div class="col text-center">
          <p>Innehåll footer</p>
    <!-- Main Content -->
    <div class="row">
      <div class="col-md-8">
        <h2>Fler Artiklar</h2>
        <div class="region-content front-page-article">
          <article class="mb-4">
            {{ drupal_entity('node', 7) }}
          </article>
          <article class="mb-4">
            {{ drupal_entity('node', 8) }}
          </article>
          <article class="mb-4">
            {{ drupal_entity('node', 9) }}
          </article>
        </div>
      </div>
      <div class="col-md-4">
        <h2>Sidebar</h2>
        <div class="region-sidebar">
          {{ drupal_entity('node', 10) }}
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer class="site-footer mt-5">
      <div class="row">
        <div class="col-md-12 text-center">
          <p>&copy; {{ "now"|date("Y") }} Mitt Drupal-projekt. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </div>
{% endblock %}